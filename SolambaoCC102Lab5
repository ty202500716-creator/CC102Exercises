#include <iostream>
#include <vector>
using namespace std;

int main () {
    char again;

    do {

        int students, days;

        cout << "Enter number of students: ";
        cin >> students;
        cout << "Enter number of days: ";
        cin >> days;

        vector<vector<int>> attendance(students, vector<int>(days));
        for (int i = 0; i < students; i++){
            cout << "Student " << i + 1 << "attendance: ";
            for (int j = 0; j < days; j++){
                cin >> attendance[i][j];
            }
        }
 
        cout << "\nOutput\n";
        cout << "-------------------------------------------------------------\n";
        cout << "Student | ";

        for (int d = 1; d <= days; d++){
            cout << "D" << " | ";
        }

        cout << "Total | Percentage | Remarks\n";
        cout << "-------------------------------------------------------------\n";

        for (int i = 0; i < students; i ++){
            int totalPresent = 0;

            cout << "  " << i + 1 << "   | ";

            for (int j = 0; j < days; j++){
                cout << attendance[i][j] << "  | ";
                totalPresent += attendance[i][j];
            }

            double percentage = (double)totalPresent / days * 100;
            string remarks = (percentage < 50) ? "DRP" : "OK";

            cout << totalPresent << "  | ";
            cout << percentage << "%     | ";
            cout << remarks << endl;
        }

        cout << "-------------------------------------------------------------\n";

        cout << "\nTry Again? (y/n): ";
        cin >> again;

        cout << endl;

    } while (again == 'y' || again == 'Y');
     
    return 0;
}




